


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum Role {
  admin
  teacher
  student
}

model User {
  id           Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  fullName     String?
  shortName    String?
  email        String  @unique
  phoneNumber  String?
  city         String?
  country      String?
  password     String
  role         Role[]
  averageScore Float   @default(10)
  isActive     Boolean @default(true)

  // Relaciones
  teacherLessons Lesson[]        @relation("TeacherLessons")
  studentLessons StudentLesson[]
  transactions   Transaction[]
  debts          Debt[]
  schedule       Schedule[]
}

model Lesson {
  id                  Int      @id @default(autoincrement())
  startDate           DateTime @db.Timestamptz
  topic               String?
  issues              String?
  week                String?
  teacherObservations String?
  otherObservations   String?
  isPaid              Boolean  @default(false)
  isScheduled         Boolean  @default(true)
  isRescheduled       Boolean  @default(false)
  isCanceled          Boolean  @default(false)
  cancellationReason  String?
  isConfirmed         Boolean  @default(false)
  isGroup             Boolean  @default(false)
  isRegistered        Boolean  @default(false)
  isTeacherPaid       Boolean  @default(false)
  teacherPayment      Float?
  reasonsRescheduled  String?
  profit              Float?

  // Relaciones
  teacher   User @relation("TeacherLessons", fields: [teacherId], references: [id])
  teacherId Int

  studentLessons StudentLesson[]
  transactions   Transaction[]
  debts          Debt[]
}

model StudentLesson {
  id                  Int     @id @default(autoincrement())
  isStudentPaid       Boolean @default(false)
  studentFee          Float?
  lessonScore         Float?
  studentObservations String?
  isConfirmed         Boolean @default(false)
  
  // Relaciones
  student   User   @relation(fields: [studentId], references: [id])
  studentId Int
  lesson    Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  Int

  @@unique([studentId, lessonId])
}

model Schedule {
  id     Int        @id @default(autoincrement())
  userId Int
  user   User       @relation(fields: [userId], references: [id])
  day    Int // 0-6, donde 0 es domingo, 1 es lunes, etc.
  hours  DateTime[]

  @@unique([userId, day])
}

model Transaction {
  id        Int             @id @default(autoincrement())
  date      DateTime
  amount    Float
  type      TransactionType
  concept   String
  lessonId  Int?
  lesson    Lesson?         @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  userId    Int?
  user      User?           @relation(fields: [userId], references: [id])
  year      Int
  month     Int
  week      Int
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum TransactionType {
  income
  expense
}

model Debt {
  id        Int             @id @default(autoincrement())
  date      DateTime
  amount    Float
  type      TransactionType
  concept   String
  lessonId  Int?
  lesson    Lesson?         @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  userId    Int?
  user      User?           @relation(fields: [userId], references: [id])
  year      Int
  month     Int
  week      Int
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
