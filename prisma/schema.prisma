// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum Role {
  admin
  teacher
  student
}

model User {
  id           Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String  @unique
  phoneNumber  String?
  city         String?
  country      String?
  password     String
  role         Role[]
  averageScore Float   @default(10)

  // Relaciones
  teacherLessons Lesson[]        @relation("TeacherLessons")
  studentLessons StudentLesson[]
}

model Lesson {
  id                  Int      @id @default(autoincrement())
  startDate           DateTime
  topic               String?
  issues              String?
  week                String?
  teacherObservations String?
  otherObservations   String?
  isPaid              Boolean  @default(false)
  isScheduled         Boolean  @default(true)
  isRescheduled       Boolean  @default(false)
  isCanceled          Boolean  @default(false)
  cancellationReason  String?
  isConfirmed         Boolean  @default(false)
  isGroup             Boolean  @default(false)
  isRegistered        Boolean  @default(false)
  isTeacherPaid       Boolean  @default(false)
  teacherPayment      Float?
  reasonsRescheduled  String?
  profit              Float?

  // Relaciones
  teacher   User @relation("TeacherLessons", fields: [teacherId], references: [id])
  teacherId Int

  studentLessons StudentLesson[]
}

model StudentLesson {
  id                  Int     @id @default(autoincrement())
  isStudentPaid       Boolean @default(false)
  studentFee          Float?
  lessonScore         Float?
  studentObservations String?

  // Relaciones
  student   User   @relation(fields: [studentId], references: [id])
  studentId Int
  lesson    Lesson @relation(fields: [lessonId], references: [id])
  lessonId  Int

  @@unique([studentId, lessonId])
}
